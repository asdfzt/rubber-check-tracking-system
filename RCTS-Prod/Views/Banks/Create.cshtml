@model RCTS_Prod.Models.Bank

@{
    ViewBag.Title = "Create Bank";
}

<h2>Create Bank</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Bank</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Routing_No)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Routing_No)
            @Html.ValidationMessageFor(model => model.Routing_No)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Bank_Phone_No)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Bank_Phone_No)
            @Html.ValidationMessageFor(model => model.Bank_Phone_No)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Bank_Street)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Bank_Street)
            @Html.ValidationMessageFor(model => model.Bank_Street)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Bank_City)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Bank_City)
            @Html.ValidationMessageFor(model => model.Bank_City)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Bank_State)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Bank_State)
            @Html.ValidationMessageFor(model => model.Bank_State)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Bank_Zip)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Bank_Zip)
            @Html.ValidationMessageFor(model => model.Bank_Zip)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Accounts", "Create", "Accounts")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
